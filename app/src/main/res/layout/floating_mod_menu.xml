<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_menu_background"
    android:padding="8dp"
    android:elevation="8dp">

    <!-- Header with close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mod Menu"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="Ã—"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/close_button_background"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Test content -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LSPosed Module Active"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Test button -->
    <TextView
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Button"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@drawable/test_button_background"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
